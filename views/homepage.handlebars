<section class='pt-4 mt-0 align-items-center'>
    <div class='row g-4 justify-content-center pt-0 d-flex align-items-stretch anim-text-row'>
        {{!-- d-none d-md-block --}}
        <div class='col-md-6 text-center p-0 m-0 d-none d-lg-flex anim-div'>
            <div id='animation-wrapper' class='align-items-start pt-0 mt-0'>
                <div id='animation-container' class='pt-0 mt-0'></div>
            </div>
        </div>

        <div class='col-md-6 text-center background-card pt-0 mt-0'>
            <div class='row pt-0 mt-0'>
                <div class='col-12'>
                    <h1 class='fw-bold pt-0 mt-0 p-0 m-0 pg-title'>TECH<i class="bi bi-soundwave"></i>TUNED is:
                    </h1>
                </div>
                <div class='col-12'>
                    <h2 class='py-3 m-0 pg-subtitle'>A nexus for learning, discussion, and innovation in the realm of software development and technology.
                </h2>
                </div>
                <div class='col-12'>
                    <h2 class='py-3 m-0 pg-info'><i class="bi bi-arrow-right pe-2"></i>From mastering foundational concepts, to exchanging stack-specific advice, to discussing cutting-edge technical advancements, TechTuned facilitates co-learning and discovery.
                </h2>
                </div>
                <div class='col-12'>
                    <h2 class='py-3 m-0 action'>Get on the wavelength! <a href='/login' class='login-signup-switch'>Log In</a> or <a href='signup' class='login-signup-switch'>Sign Up</a> to become part of the conversation.</h2>
                </div>
                
            </div> 
        </div>
    </div>
</section>  

<section id='posts-container' class='pb-5'>
    <div class='container-md posts-wrapper'>
        <div class='text-center pb-3'>
            <h2 class='display-4 fw-bold'>FEATURED POSTS</h2>
        </div>

        {{!-- <div class='justify-content-center text-center my-5'> --}}
        
            {{#each blogs as |blog|}}
                <div class='blog-blurb my-3 p-4'>
                    <div class='text-center blog-title'>
                        <h3 class='text-align-center h4' style='    text-underline-offset: 3px;'><a href='/blog/{{blog.id}}'>{{blog.title}}</a>
                    </div>
                    
                    <div class='text-center created-on'>
                        <p style='font-size: 14px;'>Created {{ format_date blog.date_created }}.</p>
                    </div>
                    
                    <div class='preview'>
                        <p style='font-size: 14px;'>{{getPreview blog.content}}</p>
                    </div>
                </div>

                <div class='text-center'>
                    <a href='/blog/{{blog.id}}' class='btn custom-button'>Read Post</a>
                </div>

            {{/each}}

        {{!-- </div> --}}
    </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.9/lottie.min.js"></script>
<script src='/js/homepage.js'></script>